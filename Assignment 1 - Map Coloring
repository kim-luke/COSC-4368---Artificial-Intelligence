#include <iostream>
#include <string>
#include <fstream>
#include <sstream>
using namespace std;

void storeGraph(ifstream& file, string** array, int rowSize, int colSize) {

	string line = "";
	string field = "";
	for (int i = 0; i < rowSize; i++) {

		getline(file, line);
		stringstream iss(line);

		for (int j = 0; j < colSize; j++) {

			getline(iss, field, ',');
			
			array[i][j] = field;
		}
	}
}

void showGraph(ifstream& file, string** array, int rowSize, int colSize) {
	for (int i = 0; i < rowSize; i++) {
		for (int j = 0; j < colSize; j++) {
			cout << array[i][j] << " ";
		}
		cout << endl;
	}
}

int main() {
	
	string line;
	int lineCount = 0;
	ifstream csv;
	csv.open("matrix_aust.csv");

	while (getline(csv, line)) {
		lineCount++;
	}

	csv.close();

	int rowSize = lineCount;
	int colSize = lineCount;

	string** array = new string*[rowSize];
	for (int i = 0; i < rowSize; i++) {
		array[i] = new string[colSize];
	}

	ifstream csv2;
	csv2.open("matrix_aust.csv");
	storeGraph(csv2, array, rowSize, colSize);
	showGraph(csv2, array, rowSize, colSize);

	system("pause");
	return 0;
}
